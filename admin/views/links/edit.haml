%ul.nav.nav-tabs
  %li=link_to tag_icon(:list, pat(:list)), url(:links, :index)
  %li=link_to tag_icon(:plus, pat(:new)), url(:links, :new)
  %li.active=link_to tag_icon(:edit, pat(:edit)), url(:links, :edit, :id => @link.id)

.tabs-content
  -form_for :link, url(:links, :update, :id => @link.id), :method => :put, :class => 'form-horizontal' do |f|
    =partial 'links/form', :locals => { :f => f }
